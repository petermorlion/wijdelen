@model WijDelen.UserImport.ViewModels.ConfirmResendUserInvitationMailsViewModel

@{
    Layout.Title = T("Confirm").ToString();

    Style.Include("WijDelen.UserImport.Styles.css");
}

@using (Html.BeginFormAntiForgeryPost()) { 
    @Html.ValidationSummary()

    @T("Are you sure you want to resend the invitation mail to the inactive users of the group {0}?", Model.GroupName)

    <fieldset>
        <button type="submit" value="@T("Yes")">@T("Yes")</button>
        <a href="@Model.ReturnUrl">@T("No")</a>
    </fieldset>
} 
