@model WijDelen.ObjectSharing.ViewModels.NewObjectRequestViewModel

@{
    Layout.Title = T("Request object").ToString();
}

<h1>@T("Request object")</h1>

@using (Html.BeginFormAntiForgeryPost(Url.Action("New", "ObjectRequest", new { Area = "WijDelen.ObjectSharing" }), FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <fieldset>
        <legend>@T("Description")</legend>
        @Html.LabelFor(m => m.Description, T("Please provide a short description of the item"))
        @Html.TextBoxFor(m => m.Description)
        @Html.ValidationMessageFor(m => m.Description)
    </fieldset>

    <fieldset>
        <legend>@T("Extra info")</legend>
        @Html.LabelFor(m => m.ExtraInfo, T("Here you can provide extra info on what you need the item for, how long you need it, etc."))
        @Html.TextAreaFor(m => m.ExtraInfo)
        @Html.ValidationMessageFor(m => m.ExtraInfo)
    </fieldset>

    <button class="primaryAction">@T("Submit")</button>
}