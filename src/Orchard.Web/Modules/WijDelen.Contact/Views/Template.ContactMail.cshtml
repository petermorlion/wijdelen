@using Orchard.Mvc.Extensions
<html>
<body style="font-family: Verdana, Arial, sans-serif;">
    <div style="background-color: #04b17b; padding: 0 10px;">
        <img src="https://peergroups.be/Themes/Peergroups.Theme/Content/logo-mail.gif" style="vertical-align: middle;">
        <img src="@Model.GroupLogoUrl" style="height: 35px; margin-left: 10px; vertical-align: middle;">
    </div>
    <div style="margin-top: 10px;">
        <p>@T("Hello {0}", Model.Name)</p>
        <p>@T("Thank you for contacting Peergroups")</p>
        <p>@T("We will reply to your message as quickly as possible. For your reference, these are the values you supplied in the contact form:")</p>
    </div>
    <div style="background-color: #f5f5f5; border: 1px solid #bbb; border-radius: 5px; padding: 10px;">
        <h2>@T("Name")</h2>
        @Model.Name

        <h2>@T("Email")</h2>
        @Model.Email

        <h2>@T("Subject")</h2>
        @Model.Subject

        <h2>@T("Text")</h2>
        <span style="white-space: pre-line">@Model.Text</span>
    </div>
</body>
</html>