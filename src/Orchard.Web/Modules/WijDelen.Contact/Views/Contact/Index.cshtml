@model WijDelen.Contact.Models.ContactViewModel
@using WijDelen.Contact.Controllers

@{
    Layout.Title = T("Contact").ToString();
}

<h1>@Layout.Title</h1>

@using (Html.BeginFormAntiForgeryPost(Url.Action("Index", "Contact", new {Area = "WijDelen.Contact"}), FormMethod.Post, new {enctype = "multipart/form-data"})) {
    <fieldset>
        @Html.TextBoxFor(m => m.Name, new {placeholder = T("Name"), maxlength = ContactController.MaximumInputLength})
        @Html.ValidationMessageFor(m => m.Name)

        @Html.TextBoxFor(m => m.Email, new {placeholder = T("Email"), maxlength = ContactController.MaximumInputLength})
        @Html.ValidationMessageFor(m => m.Email)

        @Html.TextBoxFor(m => m.Subject, new {placeholder = T("Subject"), maxlength = ContactController.MaximumInputLength})
        @Html.ValidationMessageFor(m => m.Subject)

        @Html.TextAreaFor(m => m.Text, new {placeholder = T("Text"), maxlength = ContactController.MaximumTextAreaLength})
        @Html.ValidationMessageFor(m => m.Text)
        
    </fieldset>

    <button>@T("Submit")</button>
}